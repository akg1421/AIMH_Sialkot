@model IEnumerable<AIMH_Sialkot.Models.CategoryInfo>

@{
    ViewBag.Title = "Index";
}

<link href="~/Content/Site.css" rel="stylesheet" />

<div class="container">
    <div class="jumbotron">
        <form class="form-horizontal col-md-12" action="~/CategoryInfoes/Index" method="post">
            <div class="col-md-8 pull-left">
                <div class="col-md-2">
                    <p><b>Search</b></p>
                </div>
                <div class="col-md-10" style="display:flex">
                    <input type="text" class="form-control" placeholder="Category Name" name="searchItem" required="required" autofocus="autofocus" />
                    <button type="submit" class="btn btn-default btn-sm">
                        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                    </button>
                </div>
            </div>
            <div class="col-md-4 text-right">
                @Html.ActionLink("Add Category", "Create", null, htmlAttributes: new { @class = "btn btn-primary" })
            </div>
        </form>
    </div>
    <div class="row">
        @if (ViewBag.message != null)
        {
            <div class="alert alert-default text-center">
                <a href="~/CategoryInfoes/Index"><strong class="text-danger">@ViewBag.message</strong></a>
            </div>
        }
    </div>



    @if (Model != null && Model.Count() != 0)
    {
        <div class="row">
            <table class="table table-striped table-bordered">
                <tr>
                    <th class="col-md-1">Sr No</th>
                    <th class="col-md-5">
                        @Html.DisplayNameFor(model => model.CategoryName)
                    </th>
                    <th class="col-md-5">
                        @Html.DisplayNameFor(model => model.Rate)
                    </th>
                    <th class="col-md-1"></th>
                </tr>

                @{ int k = 1;}
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@k</th>
                        @{k++;}
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoryName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Rate)
                        </td>
                        <td>
                            <div class="btn-group btn-group-xs" role="group" aria-label="...">
                                <a href="~/CategoryInfoes/Edit/@item.CategoryID" title="Edit" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-edit"></span></a>
                                <a href="~/CategoryInfoes/Details/@item.CategoryID" title="Details" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-th-list"></span></a>
                                <a href="~/CategoryInfoes/Delete/@item.CategoryID" title="Delete" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-remove"></span></a>
                                @*@Html.ActionLink("Details", "Details", new { id = item.CategoryID }, htmlAttributes: new { @class = "btn btn-default btn-xs" })*@
                                @*@Html.ActionLink("Edit", "Edit", new { id = item.CategoryID }, htmlAttributes: new { @class = "btn btn-default btn-xs" })*@
                                @*@Html.ActionLink("Delete", "Delete", new { id = item.CategoryID }, htmlAttributes: new { @class = "btn btn-default btn-xs" })*@
                            </div>
                        </td>
                    </tr>
                            }

            </table>
        </div>
                            }
</div>